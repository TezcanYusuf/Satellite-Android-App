<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="satellite"
            type="com.yusuf.satelliteapp.models.SatelliteListModelItem" />

        <variable
            name="viewModel"
            type="com.yusuf.satelliteapp.ui.list.SatelliteListViewModel" />

    </data>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/satelliteItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@{satellite.active ? @color/white : @color/red}">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageView"
            android:layout_width="@dimen/width_70"
            android:layout_height="@dimen/height_70"
            android:layout_marginStart="@dimen/margin_20dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:layout_marginBottom="@dimen/margin_20dp"
            android:src="@drawable/satellite"
            android:clickable="false"
            android:focusable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.appcompat.widget.AppCompatImageView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_20dp"
            android:layout_marginStart="@dimen/margin_20dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:clickable="false"
            android:focusable="false"
            android:text="@{satellite.name}"
            app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/appCompatImageView"
            app:layout_constraintTop_toTopOf="@+id/appCompatImageView"
            tools:text="Satellite A">

        </androidx.appcompat.widget.AppCompatTextView>



    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
